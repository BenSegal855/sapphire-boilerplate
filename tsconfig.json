{
	"extends": "@skyra/eslint-config",
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@lib/*": ["lib/*"],
			"@root/*": ["*"]
		},
		"composite": true,
		"declaration": true,
		"moduleResolution": "node"
	}
}
